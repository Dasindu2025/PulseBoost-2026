<Window x:Class="PulseBoost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PulseBoost"
        Width="1200"
        Height="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#F9FAFB">

    <!-- ROOT WITH SAFE ENTRANCE ANIMATION -->
    <Grid x:Name="Root"
          Opacity="0"
          RenderTransformOrigin="0.5,0.5">

        <Grid.RenderTransform>
            <TranslateTransform Y="30"/>
        </Grid.RenderTransform>

        <Grid.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>

                        <!-- Fade in -->
                        <DoubleAnimation
                            Storyboard.TargetProperty="Opacity"
                            From="0" To="1"
                            Duration="0:0:0.6"/>

                        <!-- Slide up -->
                        <DoubleAnimation
                            Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                            From="30" To="0"
                            Duration="0:0:0.6"/>

                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>

        <!-- MAIN LAYOUT -->
        <Grid Margin="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="420"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center">

                <!-- Logo -->
                <StackPanel Orientation="Horizontal" Margin="0 0 0 30">
                    <Image Source="assests/images/joystick.png"
                           Width="22" Height="22" Margin="0 0 8 0"/>
                    <TextBlock Text="PulseBoost"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#6D63FF"/>
                </StackPanel>

                <!-- Headings -->
                <TextBlock>
                    <Run Text="We Give " FontSize="34" FontWeight="Bold"/>
                    <Run Text="Gaming" FontSize="34" FontWeight="Bold" Foreground="#6D63FF"/>
                </TextBlock>

                <TextBlock Text="Place To Get Powers"
                           FontSize="34"
                           FontWeight="Bold"/>

                <TextBlock Text="Of Ace Winners"
                           FontSize="34"
                           FontWeight="Bold"
                           Margin="0 0 0 30"/>

                <!-- Email -->
                <TextBlock Text="Email" Margin="0 0 0 6"/>
                <TextBox Height="44"
                         Padding="12"
                         Background="#F8FAFC"
                         BorderBrush="#E2E8F0"
                         Text="Example@email.com"/>

                <!-- Password -->
                <TextBlock Text="Password" Margin="0 16 0 6"/>
                <PasswordBox Height="44"
                             Padding="12"
                             Background="#F8FAFC"
                             BorderBrush="#E2E8F0"/>

                <TextBlock Text="Forgot Password?"
                           Foreground="#6D63FF"
                           HorizontalAlignment="Right"
                           Margin="0 6 0 20"/>

                <!-- SIGN IN BUTTON (HOVER SCALE + GLOW) -->
                <Button Content="Sign in"
                        Height="48"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Background="#122B3A"
                        BorderThickness="0"
                        Cursor="Hand">

                    <Button.RenderTransform>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                    </Button.RenderTransform>

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="0" Opacity="0"/>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="#6D63FF"
                                                              BlurRadius="20"
                                                              Opacity="0.6"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <TextBlock Text="Or"
                           HorizontalAlignment="Center"
                           Margin="0 16"/>

                <!-- Google -->
                <Button Height="44" Margin="0 6"
                        Background="#F8FAFC"
                        BorderBrush="#E2E8F0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="assests/images/Google.png"
                               Width="18" Height="18" Margin="0 0 8 0"/>
                        <TextBlock Text="Sign in with Google"/>
                    </StackPanel>
                </Button>

                <!-- Facebook -->
                <Button Height="44"
                        Background="#F8FAFC"
                        BorderBrush="#E2E8F0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="assests/images/Facebook.png"
                               Width="18" Height="18" Margin="0 0 8 0"/>
                        <TextBlock Text="Sign in with Facebook"/>
                    </StackPanel>
                </Button>

                <TextBlock Margin="0 20 0 0" HorizontalAlignment="Center">
                    <Run Text="Don't you have an account? "/>
                    <Run Text="Sign up" Foreground="#6D63FF"/>
                </TextBlock>

            </StackPanel>

            <!-- RIGHT IMAGE GRID -->
            <Grid Grid.Column="1" Margin="40 0 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Border Grid.Row="0" Grid.Column="0" CornerRadius="24" Margin="10">
                    <Border.Background>
                        <ImageBrush ImageSource="assests/images/rectangle_3438.png"
                                    Stretch="UniformToFill"/>
                    </Border.Background>
                </Border>

                <Border Grid.Row="0" Grid.Column="1" CornerRadius="24" Margin="10">
                    <Border.Background>
                        <ImageBrush ImageSource="assests/images/rectangle_3440.png"
                                    Stretch="UniformToFill"/>
                    </Border.Background>
                </Border>

                <Border Grid.Row="1" Grid.Column="0" CornerRadius="24" Margin="10">
                    <Border.Background>
                        <ImageBrush ImageSource="assests/images/rectangle_3441.png"
                                    Stretch="UniformToFill"/>
                    </Border.Background>
                </Border>

                <Border Grid.Row="1" Grid.Column="1" CornerRadius="24" Margin="10">
                    <Border.Background>
                        <ImageBrush ImageSource="assests/images/rectangle_3442.png"
                                    Stretch="UniformToFill"/>
                    </Border.Background>
                </Border>

            </Grid>
        </Grid>
    </Grid>
</Window>
