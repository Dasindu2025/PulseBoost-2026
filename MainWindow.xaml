<Window
    x:Class="PulseBoost.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="PulseBoost"
    Width="1200"
    Height="800"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    Background="#F9FAFB"
    MouseMove="Window_MouseMove">

    <Window.Resources>

        <!-- Neon glow pulse (safe) -->
        <Storyboard x:Key="NeonPulse">
            <DoubleAnimation
                Storyboard.TargetProperty="(Border.Effect).Opacity"
                From="0.4"
                To="0.9"
                Duration="0:0:2"
                AutoReverse="True"
                RepeatBehavior="Forever"/>
        </Storyboard>

        <!-- Image Card Style -->
        <Style x:Key="ImageCard" TargetType="Border">
            <Setter Property="Width" Value="260"/>
            <Setter Property="Height" Value="260"/>
            <Setter Property="CornerRadius" Value="28"/>
            <Setter Property="ClipToBounds" Value="True"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#6C63FF"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        Color="#6C63FF"
                        BlurRadius="30"
                        ShadowDepth="0"
                        Opacity="0.4"/>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard Storyboard="{StaticResource NeonPulse}"/>
                </EventTrigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Canvas Width="1200" Height="800">

        <!-- LOGO -->
        <TextBlock Canvas.Left="64" Canvas.Top="40"
                   Text="PulseBoost"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Foreground="#6C63FF"/>

        <!-- HEADLINE -->
        <StackPanel Canvas.Left="64" Canvas.Top="90">

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="We Give "
                           FontSize="45"
                           FontWeight="SemiBold"/>
                <TextBlock Text="Gaming "
                           FontSize="45"
                           FontWeight="SemiBold"
                           Foreground="#6C63FF"/>
                <TextBlock Text="🎮"
                           FontSize="32"
                           Margin="6,10,0,0"/>
            </StackPanel>

            <TextBlock Text="Place To Get Powers"
                       FontSize="45"
                       FontWeight="SemiBold"/>
            <TextBlock Text="Of Ace Winners"
                       FontSize="45"
                       FontWeight="SemiBold"/>
        </StackPanel>

        <!-- EMAIL -->
        <TextBlock Canvas.Left="64" Canvas.Top="300" Text="Email"/>
        <Border Canvas.Left="64" Canvas.Top="324"
                Width="388" Height="48"
                CornerRadius="12"
                BorderBrush="#D6DEEA"
                BorderThickness="1"
                Background="#F8FBFF">
            <TextBox Text="Example@email.com"
                     BorderThickness="0"
                     Background="Transparent"
                     Margin="14,0"
                     VerticalContentAlignment="Center"/>
        </Border>

        <!-- PASSWORD -->
        <TextBlock Canvas.Left="64" Canvas.Top="388" Text="Password"/>
        <Border Canvas.Left="64" Canvas.Top="412"
                Width="388" Height="48"
                CornerRadius="12"
                BorderBrush="#D6DEEA"
                BorderThickness="1"
                Background="#F8FBFF">
            <PasswordBox BorderThickness="0"
                         Background="Transparent"
                         Margin="14,0"/>
        </Border>

        <TextBlock Canvas.Left="304" Canvas.Top="468"
                   Text="Forgot Password?"
                   Foreground="#4F6BFF"/>

        <!-- SIGN IN -->
        <Border Canvas.Left="64" Canvas.Top="496"
                Width="388" Height="52"
                CornerRadius="14"
                Background="#162D3A">
            <TextBlock Text="Sign in"
                       Foreground="White"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- OR -->
        <Line X1="64" Y1="572" X2="216" Y2="572" Stroke="#CBD5E1"/>
        <TextBlock Canvas.Left="244" Canvas.Top="562" Text="Or"/>
        <Line X1="276" Y1="572" X2="452" Y2="572" Stroke="#CBD5E1"/>

        <!-- GOOGLE -->
        <Border Canvas.Left="64" Canvas.Top="592"
                Width="388" Height="46"
                CornerRadius="12"
                Background="#F3F7FA">
            <TextBlock Text="Sign in with Google"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- FACEBOOK -->
        <Border Canvas.Left="64" Canvas.Top="648"
                Width="388" Height="46"
                CornerRadius="12"
                Background="#F3F7FA">
            <TextBlock Text="Sign in with Facebook"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- IMAGES -->
        <Canvas Canvas.Left="520" Canvas.Top="100">

            <Border x:Name="Img1" Style="{StaticResource ImageCard}" Canvas.Left="0" Canvas.Top="0">
                <Image Source="pack://application:,,,/assests/images/rectangle_3438.png" Stretch="UniformToFill"/>
            </Border>

            <Border x:Name="Img2" Style="{StaticResource ImageCard}" Canvas.Left="280" Canvas.Top="0">
                <Image Source="pack://application:,,,/assests/images/rectangle_3440.png" Stretch="UniformToFill"/>
            </Border>

            <Border x:Name="Img3" Style="{StaticResource ImageCard}" Canvas.Left="0" Canvas.Top="290">
                <Image Source="pack://application:,,,/assests/images/rectangle_3441.png" Stretch="UniformToFill"/>
            </Border>

            <Border x:Name="Img4" Style="{StaticResource ImageCard}" Canvas.Left="280" Canvas.Top="290">
                <Image Source="pack://application:,,,/assests/images/rectangle_3442.png" Stretch="UniformToFill"/>
            </Border>

        </Canvas>

    </Canvas>
</Window>
